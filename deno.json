{
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": true
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --allow-net --allow-env --allow-read --watch src/index.ts",
    "start": "deno run --allow-net --allow-env --allow-read src/index.ts",
    "db:migrate": "deno run --allow-net --allow-env --allow-read src/db/migrate.ts",
    "test": "deno test --allow-env --allow-read=.env,.env.defaults,.env.example",
    "lint": "deno lint",
    "fmt": "deno fmt"
  }
}
